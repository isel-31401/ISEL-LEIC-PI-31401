
@if(Request.IsAuthenticated) {
    <text>Welcome <b>@Context.User.Identity.Name</b>!
        <ul class="pills" id="menu">
            <li>@Html.ActionLink("Logoff", "Logout", "Account")</li>
            <li>@Html.ActionLink("Profile", "ViewUser", "Individual", new { username = User.Identity.Name }, null)</li>
            @if (User.IsInRole("Administrator"))
            {<li>@Html.ActionLink("User Administration", "Index", "Individual")</li>}
        </ul>
    </text>
}
else {
    <ul class="pills" id="menu">
        <li>@Html.ActionLink("Log On", "Login", "Account")</li>
        <li>@Html.ActionLink("Register", "Register", "Account")</li>
    </ul>
    
}
 