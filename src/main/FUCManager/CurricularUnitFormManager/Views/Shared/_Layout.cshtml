    <script src="@Url.Content("~/Scripts/_search.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/_page.js")" type="text/javascript"></script>
</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <h1>Curricular Unit Manager</h1>
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>

            <div id="menucontainer">

                 @Html.Partial("_Menu")

            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
                @Html.Partial("_Search")
            </div>
        </div>
    </div>
</body>
</html>
